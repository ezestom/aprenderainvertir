---
interface PageContentProps {
	href: string;
	target: string;
	nameLink: string;
}

const { href, nameLink, target } = Astro.props;
---

<a
	href={href}
	target={target}
	class="flex w-fit pr-8 items-center gap-3 rounded-md bg-[--lightblue] px-3 py-1 my-1 text-[--darkblue] hover:bg-[--darkblue] group hover:text-[--lightblue]">
	<div class="whitespace-nowrap flex items-center relative">
		<span class="opacity-0 group-hover:opacity-100 absolute text-xl">
			#
		</span>
		<h3 class="pl-4 leading-normal  group-hover:text-[--lightblue]">
			{nameLink}
		</h3>
	</div>
</a>
