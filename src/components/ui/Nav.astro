---
import Layout from "@layouts/Layout.astro";
import finance from "../../icons/finance.svg";
import logoTaller from "../../img/logoTaller.png";
import Tooltip from "./Tooltip.astro";
import linkedin from "../../icons/linkedin.svg";
import discord from "../../icons/discord.svg";

export const NAVBAR = [
	{
		name: "Introducción",
		href: "#introduction",
		info: "✓ ¿Qué es la inversión?\n✓ ¿Por qué deberías considerar invertir?\n✓ La inflación\n✓ Cómo empezar",
	},
	{
		name: "Historia de de la Economía",
		href: "/historia-de-la-economía",
		info: "✓ ¿Qué es la inversión?\n✓ ¿Por qué deberías considerar invertir?\n✓ La inflación\n✓ Cómo empezar",
	},
	{
		name: "La Libertad Financiera",
		href: "/libertad-financiera",
		info: "✓ ¿Qué es la libertad financiera?\n✓ Video Explicativo\n✓ Cómo se Alcanza a Través de las Inversiones\n✓ Conclusión",
	},
	{
		name: "Bolsa de Valores",
		href: "/bolsa-de-valores",
		info: "✓ Funciones de la Bolsa de Valores\n✓ Los mitos\n✓ Tipos de Instrumentos\n✓ Mecanismo de Negociación\n✓ Video Explicativo\n✓ Principales Bolsas del Mundo\n✓ Actores Clave\n✓ Evitar posibles estafas",
	},
	{
		name: "Perfiles del Inversor",
		href: "/perfiles-del-inversor",
		info: "✓ ¿Cómo Identificar Tu Perfil de Inversor?\n✓ Test del Inversor\n✓ Perfiles de Inversor\n✓ Estrategias según tu Perfil de Inversor",
	},
	{
		name: "Renta Fija ó Variable",
		href: "/renta-fija-o-renta-variable",
		info: "✓ Renta Fija\n✓ Video Explicativo\n✓ Ejemplos de Inversión en Renta Fija\n✓ Renta Variable\n✓ Ejemplos de Inversión en Renta Variable\n✓ Conclusión",
	},
	{
		name: "Instrumentos Financieros",
		href: "/instrumentos-financieros",
		info: "✓ Acciones\n✓ CEDEARs\n✓ ETFs\n✓ Fondos Comunes de Inversión (FCI)\n✓ Bonos\n✓ Títulos Públicos\n✓ Opciones Negociables\n✓ Letras del Tesoro (LETES)\n✓ Cauciones Bursátiles\n✓ Opciones\n✓ Futuros Financieros\n✓ Cheques Diferidos\n✓ Fideicomisos Financieros",
	},
	{
		name: "Fondo Común de Inversión",
		href: "/fondo-común-de-inversion",
		info: "✓ Características Principales\n✓ Tipos de FCI\n✓ Características del FCI de Liquidez\n✓ Inversión en Fondos de Liquidez\n✓ Ventajas\n✓ Ejemplo Práctico\n✓ Conclusión",
	},
	{
		name: "Dolar MEP",
		href: "/dolar-mep",
		info: "empty",
	},
	{
		name: "Sectores de la Economía de EE.UU.",
		href: "/sectores-de-la-economía-de-EEUU",
		info: "empty",
	},
	{
		name: "Analisis Técnico",
		href: "/análisis-técnico",
		info: "empty",
	},
	{
		name: "Analisis Fundamental",
		href: "/análisis-fundamental",
		info: "empty",
	},
	{
		name: "Comenzar a Invertir",
		href: "/comenzar-a-invertir",
		info: "empty",
	},
