						<a
							href={href}
							class="mx-auto block w-full max-w-[12.5rem]">
							<div class="whitespace-nowrap text-start w-full text-base text-[--darkblue] relative group opacity-75 hover:opacity-100 transition">
								<>
									<span class="opacity-0 group-hover:opacity-100 absolute left-0">
										#
									</span>
									<span class="pl-4 text-black/75">
										{name}
									</span>
