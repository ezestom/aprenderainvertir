<nav
	transition:persist
	class="pointer-events-none opacity-0 fixed inset-0 z-90 flex-shrink-0 flex-col overflow-clip transition-opacity duration-300 ease-in-out xl:pointer-events-auto xl:bottom-auto xl:left-0 xl:right-auto xl:top-0 xl:z-[9999] xl:h-screen 2xl:left-12 2xl:top-12 2xl:h-[calc(100vh-6rem)] 2xl:rounded-3xl hidden xl:block"
	id="nav">
	<div
		class="relative z-10 flex h-full max-h-full w-full flex-shrink-0 flex-col items-center justify-start !overflow-y-auto p-8 text-[--darkblue] md:px-8 xl:px-12"
		id="navbar">
		<div class="flex w-full flex-col items-center justify-center">
			<a
				href="/#top"
				id="toNav"
				class="mx-auto block w-full rounded-xl hover:bg-[--lightblue] duration-300 ease-in-out group transition-all"
				><div class="relative flex w-full justify-center py-1">
					<img
						transition:persist
						transition:name="finance"
						src={finance.src}
						alt="finance image"
						title="finance image"
						class="block size-[10rem] object-contain
						 group-active:scale-90 group-active:delay-100 group-active:translate-y-1 group-active:translate-x-1"
