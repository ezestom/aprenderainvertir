---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Content from "./Content.astro";
import Nav2 from "./Nav2.astro";
import Flap from "./Flap.astro";
import { Breadcrumbs } from "./Breadcrumbs/Breadcrumbs";
import AsideRight from "./AsideRight.astro";

interface PageContentProps {
	headerImage: string;
	title: string;
}
const { headerImage, title } = Astro.props;
---

<Layout title={title}>
	<Nav2 />
	<Content>
		<!-- <AsideRight /> -->
		<section
			class="py-12 text-pretty text-sm md:text-base leading-normal text-black/60 relative z-10">
			<Breadcrumbs client:load />
			<Image
				style={{ background: "rgba(0,0,0,0.05)" }}
				src={headerImage}
				alt="Header"
				class="h-[300px] md:h-[350px] w-full rounded-md object-contain shadow-md"
				id="headerImage"
			/>
			<h1
				class="flex justify-between text-pretty items-center rounded-md px-4 py-2 my-6 from-[--darkblue] to-blue-400 bg-gradient-to-b shadow-md">
				<span class="flex gap-1 items-center">
					{title}
				</span>
				<button
					onclick="window.history.back()"
					id="back"
					class="w-fit text-[--darkblue] bg-gray-100 hover:shadow-md p-2 rounded-md my-2 active:scale-90 text-sm flex flex-col items-center justify-center">
					<span>Atrás </span>
					<span>↩</span>
				</button>
			</h1>
			<slot />
		</section>
	</Content>
	<!-- <AsideRight /> -->
	<Flap />
</Layout>

<style>
	section::before {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url("../../icons/finance.svg");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		opacity: 0.02; /* Ajusta este valor para cambiar la transparencia de la imagen */
		z-index:-1;
	}
</style>
