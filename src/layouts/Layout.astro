---
import "@fontsource-variable/onest";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content={"Aprende a invertir y así conseguir tu libertad financiera."}
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/finance.svg" />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				/* --lightblue: #99ccff;
				 */
				--lightblue: #cce6ff;
				--darkblue: #0066cccc;
				--lightred: #ffaa99;
				--darkred: #cc2200cc;
				--lightyellow: #ffff99;
				--darkyellow: #cccc00cc;
				--lightgreen: #99ff99;
				--darkgreen: #00cc00cc;
				--lightviolet: #dd99ff;
				--darkviolet: #8800cccc;
			}
			body {
				font-family: "Onest Variable", sans-serif, system-ui;
				scroll-behavior: smooth;
				background-color: #fafafa;
			}
			h1 {
				@apply mb-2 mt-2 scroll-mt-16 text-balance text-2xl font-bold leading-none text-[--darkblue] first:mt-0 sm:text-[1.75rem];
			}
			h2 {
				@apply mb-2  text-balance text-2xl font-bold leading-none text-[--darkblue] first:mt-0 sm:text-[1.75rem] ;
			}

			h3 {
				@apply text-sm leading-normal text-[--darkblue] sm:text-lg lg:text-xl font-bold;
				/* @apply font-semibold text-[--darkred]; */
			}
			strong {
				@apply font-semibold text-[--darkred];
			}

			li,
			p {
				@apply mb-4 text-pretty;
			}
			strong > a,
			strong > button {
				@apply whitespace-nowrap  rounded-md bg-[--lightblue]  py-0.5 px-2 text-[--darkblue] transition-colors duration-300 ease-in-out hover:bg-[--darkblue] hover:text-[--lightblue];
			}
			.capitalize-first-letter::first-letter {
				@apply uppercase; /* Usa la utilidad de Tailwind para mayúsculas */
			}
		</style>
	</body>
</html>
