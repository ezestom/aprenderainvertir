---
import "@fontsource-variable/onest";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content={"Aprende a invertir y asÃ­ conseguir tu libertad financiera."}
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/finance.svg" />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				/* --lightblue: #99ccff;
				 */
				--lightblue: #cce6ff;
				--darkblue: #0066cccc;
				--lightred: #ffaa99;
				--darkred: #cc2200cc;
				--lightyellow: #ffff99;
				--darkyellow: #cccc00cc;
				--lightgreen: #99ff99;
				--darkgreen: #00cc00cc;
				--lightviolet: #dd99ff;
				--darkviolet: #8800cccc;
			}
			body {
				font-family: "Onest Variable", sans-serif, system-ui;
				scroll-behavior: smooth;
				background-color: #fafafa;
			}
			h1 {
				@apply mb-2 mt-16 scroll-mt-16 text-balance text-3xl font-bold leading-none text-[--darkblue] first:mt-0 sm:text-[2.5rem] xl:mt-12 xl:scroll-mt-32;
			}
			h2 {
				@apply text-sm leading-normal text-[--darkblue] sm:text-lg lg:text-xl font-bold;
			}
			strong,
			h3 {
				@apply font-semibold text-[--darkred];
			}
			h3 {
				@apply font-bold py-1 text-[1.15rem];
			}
			li,p {
				@apply mb-4 text-pretty;
			}
			strong > a {
				@apply whitespace-nowrap  rounded-md bg-[--lightblue]  py-0.5 px-2 text-[--darkblue] transition-colors duration-300 ease-in-out hover:bg-[--darkblue] hover:text-[--lightblue];
			}
		</style>
	</body>
</html>
